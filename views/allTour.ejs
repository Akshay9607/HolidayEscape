<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>Admin | All Tours</title>
		<link
			href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
			rel="stylesheet"
			integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
			crossorigin="anonymous"
		/>
	</head>
	<body>
		<!-- NAVBAR START -->
		<nav class="navbar navbar-expand-lg bg-body-tertiary">
			<div class="container-fluid">
				<a class="navbar-brand" href="/api/admin">Admin</a>
				<button
					class="navbar-toggler"
					type="button"
					data-bs-toggle="collapse"
					data-bs-target="#navbarNav"
					aria-controls="navbarNav"
					aria-expanded="false"
					aria-label="Toggle navigation"
				>
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="/api/admin/">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="/api/admin/get/all">All Tour</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
		<!-- NAVBAR END -->
		<!-- HERO START -->
		<div class="container">
			<div class="container">
				
				<div class="d-flex flex-wrap justify-content-between">
					<% for(let i=0; i<tours.length; i++) { %>
					<div class="card  m-3" style="width: 20rem">
						<div class="card-body d-flex flex-column justify-content-between">
							<h5 class="card-title"><%= tours[i].englishData.title %></h5>
							<p class="card-text "><b><%= tours[i].englishData.destination %></b></p>
							<p class="card-text"><%= tours[i].englishData.description.slice(0, 150) %>...</p>
                            <div class="d-flex justify-content-end">
                                <a href="/api/admin/add/schedule/<%=tours[i]._id%>" class="btn btn-outline-dark">Add Schedule</a>

                            </div>
						</div>
					</div>
					<% } %>
				</div>
			
			</div>
		</div>
		<!-- HERO END -->
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
			crossorigin="anonymous"
		></script>
	</body>
</html>
